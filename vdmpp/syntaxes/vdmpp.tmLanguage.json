{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "VDM",
	"patterns": [
		{
			"include": "#vdm-in-latex"
		},
		{
			"include": "#other-latex"
		},
		{
			"include": "source.vdm"
		}
	],
	"scopeName": "source.vdmpp",
	"repository": {
		"vdm-in-latex": {
			"patterns": [
				{
					"include": "#inside-latex"
				},
				{
					"include": "#outside-latex"
				}
			]
		},
		"inside-latex": {
			"begin": "(\\\\begin\\{.*\\})",
			"end": "(?=\\\\end\\{.*\\})",
			"name": "meta.inside.latex",
			"beginCaptures": {
				"1": {
					"name": "keyword.other"
				}
			},
			"patterns": [
				{
					"include": "source.vdm"
				}
			]
		},
		"outside-latex": {
			"begin": "(\\\\end\\{.*\\})",
			"end": "(?=\\\\begin\\{.*\\})",
			"name": "meta.outside.latex",
			"beginCaptures": {
				"1": {
					"name": "keyword.other"
				}
			},
			"patterns": [
				{
					"name": "comment.block",
					"match": "\\S+"
				}
			]
		}
	}
}
